<div class="container">
  <h1 style="text-align: center; margin-top: 100px;">Liste des cours</h1>
  {{#if db}}
  {{#each db}}

  <table class="table align-middle mb-0 bg-white">
    <thead class="bg-light">
      <tr>
        <th>Nom</th>
        <th>Titre</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <div class="d-flex align-items-center">
            {{!-- <img src="/assets/images/{{this.avatar}}" alt="avatar" style="width: 45px; height: 45px" class="rounded-circle" /> --}}
            <div class="ms-3">
              <p class="fw-bold mb-1">{{this.id}}</p>
            </div>
          </div>
        </td>
        <td>
          <p class="fw-normal mb-1">{{this.titre}}</p>
        </td>
        <td>
          <p class="fw-normal mb-1">{{this.description}}</p>
        </td>
        <td>
          <a href='/cours/{{this.id}}' type="submit" class="btn btn-link btn-sm btn-rounded">Voir</a>
        </td>
      </tr>
    </tbody>
  </table>
  {{else}}
    <h1>Base de donn√©e vide</h1>
  {{/each}}
  {{/if}}
</div>